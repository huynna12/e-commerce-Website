# ========= Django core =========
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=change-me-rotate-before-any-public-push
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# If you use CSRF cookies (recommended when using session auth)
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ========= Frontend / CORS =========
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ========= Database =========
# Local dev: keep SQLite by leaving DATABASE_URL empty (if your settings default to sqlite),
# or explicitly set it like this:
# DATABASE_URL=sqlite:///db.sqlite3
#
# Later (Postgres/RDS):
# DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=

# ========= Auth (SimpleJWT) =========
# Optional: set if you override signing key; otherwise it may use DJANGO_SECRET_KEY depending on config
# JWT_SIGNING_KEY=change-me

# ========= AWS S3 (Media uploads) =========
# Later: set USE_S3=1 and fill the rest.
USE_S3=0
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
# If you use CloudFront/custom domain:
AWS_S3_CUSTOM_DOMAIN=

# ========= Email (optional) =========
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=

# ========= Observability (optional) =========
# SENTRY_DSN=